{
  "name": "rulzlawyer-dnd35-system",
  "version": "2.0.0",
  "description": "Complete D&D 3.5 Character Creator and Adventure Engine System with Epic Level Support, AI Portraits, Dynamic Storytelling, and Multiplayer Campaigns",
  "main": "game-launcher.js",
  "scripts": {
    "start": "node game-launcher.js --mode=full",
    "start:debug": "node --inspect game-launcher.js --mode=full --debug=true",
    "start:prod": "NODE_ENV=production node game-launcher.js --mode=full",
    "dev": "nodemon game-launcher.js --mode=full --debug=true",
    "server": "node code-repository/server/multi-user-server-architecture.js",
    "server:debug": "node --inspect code-repository/server/multi-user-server-architecture.js",
    "character": "node game-launcher.js --mode=character-creator",
    "combat": "node game-launcher.js --mode=combat",
    "spells": "node game-launcher.js --mode=spells",
    "epic": "node game-launcher.js --mode=epic",
    "portrait": "node game-launcher.js --mode=portrait",
    "adventure": "node game-launcher.js --mode=adventure",
    "test": "node code-repository/examples/complete-system-integration-demo.js",
    "test:integration": "npm run test",
    "build": "echo 'Build completed - RulzLawyer is ready!'",
    "postinstall": "echo RulzLawyer DnD 3.5 System installed successfully!",
    "clean": "echo 'Cleaning temporary files...' && del /q logs\\*.log 2>nul || true",
    "restart": "powershell -Command \"Get-Process -Name node -ErrorAction SilentlyContinue | Stop-Process -Force\" && npm start",
    "stop": "powershell -Command \"Get-Process -Name node -ErrorAction SilentlyContinue | Stop-Process -Force\"",
    "web": "node game-launcher.js --mode=full --web=true",
    "docs": "echo 'Opening documentation...' && start http://localhost:3000/docs",
    "demo": "node code-repository/examples/complete-system-demo.js",
    "demo:epic": "node code-repository/examples/epic-portrait-system-demo.js",
    "demo:integrated": "node code-repository/examples/integrated-system-demo.js"
  },
  "keywords": [
    "dnd",
    "dungeons-and-dragons",
    "d&d",
    "3.5",
    "character-creator",
    "rpg",
    "tabletop",
    "gaming",
    "epic-levels",
    "ai-portraits",
    "multiplayer",
    "websocket",
    "adventure-engine",
    "spell-system",
    "combat-system"
  ],
  "authors": [
    {
      "name": "RulzLawyer Development Team",
      "email": "dev@rulzlawyer.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbaillis/RulzLawyer.git"
  },
  "bugs": {
    "url": "https://github.com/tbaillis/RulzLawyer/issues"
  },
  "homepage": "https://github.com/tbaillis/RulzLawyer#readme",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "crypto": "^1.0.1",
    "jimp": "^0.22.10",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0-rc.12",
    "xml2js": "^0.6.2",
    "csv-parser": "^3.0.0",
    "lowdb": "^6.1.0",
    "eventemitter3": "^5.0.1",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "config": {
    "port": 3000,
    "debug": true,
    "environment": "development"
  },
  "nodemonConfig": {
    "watch": [
      "game-launcher.js",
      "code-repository/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "temp/",
      "*.log"
    ],
    "exec": "node game-launcher.js --mode=full --debug=true"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "directories": {
    "lib": "code-repository/src",
    "test": "tests",
    "doc": "docs"
  }
}